local function runProximityAndTeleport()
    local prompt = workspace:WaitForChild("Trophy"):WaitForChild("ProxHold"):WaitForChild("ProximityPrompt")

    -- Set max interaction distance to 10,000
    prompt.MaxActivationDistance = 10000

    local success, result = pcall(function()
        fireproximityprompt(prompt, 1, Enum.KeyCode.E, game.Players.LocalPlayer)
    end)

    if success then
        print("ProximityPrompt fired successfully.")
        wait(1)
        game:GetService("TeleportService"):Teleport(game.PlaceId, game.Players.LocalPlayer)
    else
        warn("Failed to fire ProximityPrompt:", result)
    end
end

-- The same script source, with max distance set, to queue on teleport:
local scriptSource = [[
local function runProximityAndTeleport()
    local prompt = workspace:WaitForChild("Trophy"):WaitForChild("ProxHold"):WaitForChild("ProximityPrompt")
    prompt.MaxActivationDistance = 10000
    local success, result = pcall(function()
        fireproximityprompt(prompt, 1, Enum.KeyCode.E, game.Players.LocalPlayer)
    end)
    if success then
        print("ProximityPrompt fired successfully.")
        wait(1)
        game:GetService("TeleportService"):Teleport(game.PlaceId, game.Players.LocalPlayer)
    else
        warn("Failed to fire ProximityPrompt:", result)
    end
end

runProximityAndTeleport()
]]

if syn and syn.queue_on_teleport then
    syn.queue_on_teleport(scriptSource)
elseif queue_on_teleport then
    queue_on_teleport(scriptSource)
else
    warn("Your executor does not support queue_on_teleport.")
end

-- Run the function immediately on this session
runProximityAndTeleport()
